# backend_api/.htaccess
RewriteEngine On
RewriteBase /

# Bestaande files/folders ongemoeid laten
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule - [L]

# /backend/... -> backend_api.php?route=...
RewriteRule ^backend/(.*)$ backend_api.php?route=$1 [QSA,L]

# /backend_api.php/... -> backend_api.php?route=$1
RewriteRule ^backend_api\.php/(.*)$ backend_api.php?route=$1 [QSA,L]
